<launch>

  <param name="use_sim_time" value="true"/>

  <!-- Cargar la descripción del robot Husky+Ouster -->
  <param name="robot_description"
    textfile="$(find husky_description)/urdf/husky_ouster_cartographer.urdf" />

  <!-- Publicar el árbol de transformaciones del robot -->
  <node name="robot_state_publisher" pkg="robot_state_publisher"
    type="robot_state_publisher" />

  <!-- Nodo principal de Cartographer -->
  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node"
      args="-configuration_directory $(find cartographer_ros)/configuration_files -configuration_basename backpack_3d.lua"
      output="screen">
    <!-- Cambia este remap si tu Ouster publica en otro topic -->
    <remap from="points2" to="/ouster/points"/>
    <!-- Si usas IMU, añade también el remap correspondiente -->
    <remap from="imu" to="/imu/data" />
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
</launch>




