<launch>

  <!-- <param name="use_sim_time" value="true"/> -->
    
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_se_odom">
    <rosparam command="load" file="$(find husky_navigation)/config/odom_ekf.yaml" />
    <remap from="odometry/filtered" to="ekf/odom_filtered"/>
  </node>

  <!-- <node pkg="robot_localization" type="ekf_localization_node" name="ekf_se_map">
    <rosparam command="load" file="$(find husky_manager)/config/localization2.yaml" />
    <remap from="tf" to="tf_redundant"/>
    <remap from="odometry/filtered" to="ekf2/odom_filtered"/>
  </node>
   -->
  <!-- <arg name="robot_namespace" default="/"/>
  <param name="my_robot_description" textfile="$(find husky_description)/urdf/husky.urdf.xacro" />
    
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_st_pub" >
  </node> -->

  <!-- 3D scan to 2D scan -->
  <include file="$(find husky_custom_navigation)/launch/ouster_to_scan.launch" />

  <!-- Run the map server -->
  <arg name="map_file" default="$(find husky_custom_navigation)/maps/innova.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!--- Run AMCL -->
  <include file="$(find husky_custom_navigation)/launch/amcl.launch" >
    <arg name="use_map_topic" default="true"/>
    <arg name="scan_topic" default="/scan" />
  </include>
  
  <!--- Run Move Base -->
  <include file="$(find husky_custom_navigation)/launch/move_base.launch" />

</launch>