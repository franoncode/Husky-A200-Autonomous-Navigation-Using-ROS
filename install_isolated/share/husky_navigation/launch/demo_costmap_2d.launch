<launch>

  <!-- Nodo que convierte el pointcloud en scan 2D -->
  <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">
    <remap from="cloud_in" to="/ouster/points"/>
    <!-- <remap from="scan" to="/scan"/> -->
    <param name="target_frame" value="base_link"/>
    <param name="transform_tolerance" value="0.01"/>
    <param name="min_height" value="0.20"/>
    <param name="max_height" value="0.40"/>
    <param name="angle_min" value="-3.14"/>
    <param name="angle_max" value="3.14"/>
    <param name="angle_increment" value="0.004"/>
    <param name="scan_time" value="0.1"/>
    <param name="range_min" value="0.7"/>
    <param name="range_max" value="10.0"/>
    <param name="use_inf" value="true"/>
  </node>

  <!-- <param name="/use_sim_time" value="true" /> -->

<!-- Establecer descripcion del robot -->
  <arg name="robot_namespace" default="/"/>
  <param name="robot_description" command="$(find xacro)/xacro '$(find husky_description)/urdf/husky.urdf.xacro'
    robot_namespace:=$(arg robot_namespace)" />

<!-- Publica las tf del robot -->
  <node name="robot_state_publisher" pkg="robot_state_publisher"
    type="robot_state_publisher" />
 
  <node name="playbag" pkg="rosbag" type="play"
      args="--topics /ouster/points /husky_velocity_controller/odom --clock /home/fran/Fran/record_20250707_120352.bag" />

  <include file="$(find husky_navigation)/launch/map_based_navigation.launch" />
      
</launch>